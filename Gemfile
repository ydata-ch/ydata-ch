# frozen_string_literal: true

source "https://rubygems.org"

# This specifies the Jekyll version.
# Using a Gemfile is the recommended way to use Jekyll, as it ensures
# that you and your collaborators are using the same version.
gem "jekyll", "~> 4.4"

# Use the modern Dart SASS implementation for Jekyll. This is the crucial
# fix that allows Jekyll's SASS compiler to correctly find and process
# modern CSS frameworks like Bulma from the `node_modules` directory.
gem "sass-embedded"

# Required for `jekyll serve` in Ruby 3.0+
gem "webrick"
